{
    "manifest_version": 3,
    "name": "RevAI",
    "description": "Обобщайте отзывы на популярных сайтах в один клик",
    "version": "0.1",
    "icons": {
      "16":"icons/16.png",
      "32":"icons/32.png",
      "48":"icons/48.png",
      "128":"icons/128.png"
    },
    "action": {
        "default_popup":"popup.html"
    },
    "content_scripts": [
    {
      "js": ["html_scripts/button.js"],
      "matches": [
        "https://www.ozon.ru/product/*"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["images/*.png"],
    "matches": ["<all_urls>"]
  }
  ],
  "permissions": [
    "storage", "activeTab", "scripting"  
  ],
  "host_permissions": [
    "https://www.ozon.ru/product/*"
  ],
  "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self';"
  }
  }